{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}{% set pageTitle = 'Toute les voitures' %}
{% include 'pagination/_nav.html.twig' %}

    <h1>Voiture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Content</th>
                <th>Modele</th>
                <th>Est_vendu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.name }}</td>
                <td>{{ voiture.price }}</td>
                <td>{{ voiture.description }}</td>
                <td>{{ voiture.content }}</td>
                <td>{{ voiture.modele }}</td>
                <td>{{ voiture.estVendu ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_voitures_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_voitures_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voitures_new') }}">Create new</a>
{% endblock %}
